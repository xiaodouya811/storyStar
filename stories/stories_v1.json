            { "text": { "zh": "华丽衣服", "en": "fancy clothes" }, "correct": false },
            { "text": { "zh": "美丽花朵", "en": "beautiful flowers" }, "correct": false },
            { "text": { "zh": "清澈河流", "en": "clear rivers" }, "correct": false }
